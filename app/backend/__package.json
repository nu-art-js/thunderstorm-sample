{
  "name": "app-backend",
  "version": "$APP_VERSION",
  "description": "Backend hello world",
  "keywords": [
    "TacB0sS",
    "backend",
    "boilerplate",
    "express",
    "infra",
    "nu-art",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:nu-art-js/thunderstorm-template.git"
  },
  "license": "Apache-2.0",
  "author": "TacB0sS",
  "scripts": {
    "build": "tsc",
    "serve-old": "cd .. && bash ./build-and-install.sh -lb -nb -up=app-backend",
    "serve": "bash launch-server.sh",
    "launch": "bash launch-server.sh",
    "serve-debug": "cd .. && bash ./build-and-install.sh -lbd  -nb -up=app-backend",
    "debug": "bash launch-server.sh --debug"
  },
  "dependencies": {
    "@google-cloud/firestore": "^4.8.1",
    "https": "^1.0.0",
    "net": "^1.0.2",
    "url": "^0.11.0",
    "@nu-art/ts-openai": "?",
    "@nu-art/ts-focused-object-backend": "?",
    "@nu-art/firebase-backend": "?",
    "@nu-art/google-services-backend": "?",
    "@nu-art/permissions-backend": "?",
    "@nu-art/slack-backend": "?",
    "@nu-art/thunderstorm-backend": "?",
    "@nu-art/ts-common": "?",
    "@nu-art/ts-styles": "?",
    "@nu-art/user-account-backend": "?",
    "@app/core-shared": "?",
    "@app/core-backend": "?",
    "@slack/web-api": "^5.8.1",
    "body-parser": "^1.18.3",
    "compression": "^1.7.4",
    "express": "?",
    "firebase": "?",
    "firebase-admin": "?",
    "firebase-functions": "?",
    "fs": "0.0.1-security",
    "moment": "?",
    "request": "^2.88.0",
    "use-strict": "^1.0.1"
  },
  "devDependencies": {
    "@types/node-fetch": "^2.5.7",
    "@types/body-parser": "^1.17.0",
    "@types/request": "^2.48.3",
    "@types/saml2-js": "^1.6.8",
    "firebase-functions-test": "^0.2.3"
  },
  "engines": {
    "node": "22"
  },
  "unitConfig": {
    "debugPort": 8001,
    "basePort": 8002,
    "functions": [
      "api"
    ],
    "type": "firebase-function",
    "label": "TS - Backend",
    "sslKey": "../../.config/.ssl/server-key.pem",
    "sslCert": "../../.config/.ssl/server-cert.pem",
    "envs": {
      "local": {
        "projectId": "thunderstorm-dev"
      },
      "prod": {
        "projectId": "thunderstorm"
      }
    }
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./index.js"
    },
    "./*": {
      "types": "./*.d.ts",
      "import": "./*.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts"
}
