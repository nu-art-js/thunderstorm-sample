{
  "compilerOptions": {
    "module": "NodeNext",
    "baseUrl": "./",
    "outDir": "../../build",
    "rootDir": ".",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "jsx": "react-jsx",
    "allowJs": true,
    "lib": [
      "ES2022",
      "DOM"
    ],
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,
    "allowImportingTsExtensions": true
  }
}
