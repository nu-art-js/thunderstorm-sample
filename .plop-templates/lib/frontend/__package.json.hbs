{
  "name": "@app/{{libName}}-frontend",
  "version": "$APP_VERSION",
  "description": "{{libName}} Frontend",
  "license": "Apache-2.0",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "tsc"
  },
  "publishConfig": {
    "directory": "{{outputDir}}",
