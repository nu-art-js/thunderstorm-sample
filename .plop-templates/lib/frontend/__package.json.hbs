    "@nu-art/ts-common": "$THUNDERSTORM_SDK_VERSION",
    "react": "$REACT_PKG_VERSION",
    "react-dom": "$REACT_DOM_PKG_VERSION"
  },
  "devDependencies": {
    "@types/react": "$REACT_TYPES_VERSION",
    "@types/react-dom": "$REACT_DOM_TYPES_VERSION",
    "@types/chai": "$CHAI_TYPES_VERSION",
    "@types/mocha": "$MOCHA_TYPES_VERSION"
  },
  "private": {{isPrivate}},
  "bai": {
    "label": "{{libName}} Frontend",
    "pathToConfig": "./config.ts",
    "customTSConfig": false
  }
